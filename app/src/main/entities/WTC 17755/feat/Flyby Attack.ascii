template {
  name: "Flyby Attack"
  reference {
    name: "WTC 17755"
    pages {
      low: 303
      high: 303
    }
  }
  world: "Generic"
  description: "Allows to make an attack anywhere in a move."
  short_description: "Take a standard action during a move."
}
type: GENERAL
benefit: "When flying, the creature can take a move action\n                    (including a dive) and another standard action at any point\n                    during the move. The creature cannot take a second move\n                    action during a round when it makes a flyby attack."
normal: "Without this feat, the creature takes a standard action\n                    either before or after its move."
prerequisites: "Fly speed"
