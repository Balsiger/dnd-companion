<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.ixitachitls.companion">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:logo="@mipmap/launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.ixitxachitls.companion.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name="net.ixitxachitls.companion.storage.DataBaseContentProvider"
            android:authorities="net.ixitxachitls.companion">
        </provider>

        <activity
            android:name="net.ixitxachitls.companion.ui.CampaignActivity"
            android:label="@string/title_activity_campaign"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="net.ixitxachitls.companion.ui.CharacterActivity"
            android:label="@string/title_activity_character"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="net.ixitxachitls.companion.ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>