<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.ixitxachitls.companion">

  <!-- requried permissions -->
  <uses-permission android:name="android.permission.INTERNET" />

  <application
      android:name="net.ixitxachitls.companion.CompanionApplication"
      android:allowBackup="true"
      android:icon="@mipmap/launcher_icon"
      android:label="@string/app_name"
      android:logo="@mipmap/launcher_icon"
      android:supportsRtl="false"
      android:theme="@style/SplashTheme">
    <activity
        android:name="net.ixitxachitls.companion.ui.activities.MainActivity"
        android:configChanges="orientation|screenSize"
        android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name="com.tenmiles.helpstack.activities.HomeActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.ArticleActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.EditAttachmentActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.ImageAttachmentDisplayActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.IssueDetailActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.NewIssueActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.NewUserActivity"
        android:theme="@style/AppTheme"></activity>
    <activity android:name="com.tenmiles.helpstack.activities.SectionActivity"
        android:theme="@style/AppTheme"></activity>

  </application>

</manifest>