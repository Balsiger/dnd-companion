<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.ixitxachitls.companion">

  <!-- requried permissions -->
  <uses-permission android:name="android.permission.INTERNET" />

  <application
      android:name="net.ixitxachitls.companion.CompanionApplication"
      android:allowBackup="true"
      android:icon="@mipmap/launcher_icon"
      android:label="@string/app_name"
      android:logo="@mipmap/launcher_icon"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name="net.ixitxachitls.companion.ui.activities.MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <provider
        android:name="net.ixitxachitls.companion.storage.DataBaseContentProvider"
        android:authorities="net.ixitxachitls.companion">
    </provider>

  </application>

</manifest>