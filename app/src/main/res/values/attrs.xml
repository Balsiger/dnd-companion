<resources>
  <declare-styleable name="EditAbility">
    <attr name="label" format="string"/>
  </declare-styleable>

  <declare-styleable name="TitleView">
    <attr name="title" format="string"/>
    <attr name="subtitle" format="string"/>
    <attr name="color" format="color"/>
    <attr name="dark" format="boolean"/>
  </declare-styleable>

  <declare-styleable name="DiceView">
    <attr name="modifier_label" format="string"/>
  </declare-styleable>

  <declare-styleable name="AbilityView">
    <attr name="attribute_name" format="string"/>
  </declare-styleable>

  <declare-styleable name="IconView">
    <attr name="bleep_bright" format="color"/>
    <attr name="bleep_dark" format="color"/>
    <attr name="bleep_duration" format="integer"/>
  </declare-styleable>

  <declare-styleable name="ActionButton">
    <attr name="pulse_bright" format="color"/>
    <attr name="pulse_dark" format="color"/>
    <attr name="pulse_duration" format="integer"/>
  </declare-styleable>

  <declare-styleable name="StatusView">
  </declare-styleable>

  <declare-styleable name="RoundImageView">
    <attr name="radius_percents" format="integer"/>
    <attr name="height_px" format="integer"/>
    <attr name="width_px" format="integer"/>
  </declare-styleable>

  <declare-styleable name="LabelledEditTextView">
    <attr name="defaultText" format="string"/>
    <attr name="textColor" format="color"/>
    <attr name="lineColor" format="color"/>
    <attr name="labelText" format="string"/>
    <attr name="labelColor" format="color"/>
    <attr name="descriptionText" format="string"/>
    <attr name="minLines" format="integer"/>
  </declare-styleable>

  <declare-styleable name="ImageDropTarget">
    <attr name="image" format="integer"/>
    <attr name="text" format="string"/>
  </declare-styleable>

</resources>
