<resources>

  <style name="LargeText" parent="">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="SmallText" parent="">
    <item name="android:textSize">10sp</item>
  </style>

  <style name="TinyText" parent="">
    <item name="android:textSize">8sp</item>
  </style>

  <style name="IconSize" parent="">
    <item name="android:layout_height">24dp</item>
  </style>

  <style name="Title" parent="LargeText">
    <item name="android:textColor">@color/title</item>
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="OnOffSwitch" parent="AppTheme">
    <item name="colorControlActivated">@color/on</item>
  </style>

  <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textSize">36sp</item>
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <style name="RippleThemeHighlight">
    <item name="colorControlHighlight">@color/black</item>
  </style>

  <style name="RippleTheme">
    <item name="android:theme">@style/RippleThemeHighlight</item>
  </style>

</resources>
