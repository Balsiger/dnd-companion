<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.ixitachitls.companion.net.ixitxachitls.companion.CharacterActivity"
    tools:showIn="@layout/activity_character"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <TextView
        android:text="@string/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterNameLabel"
        android:textSize="18sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterNameValue"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_marginStart="75dp"/>

    <TextView
        android:text="@string/character_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterRaceLabel"
        android:textSize="18sp"
        android:layout_below="@+id/characterNameLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterRaceValue"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/characterRaceLabel"
        android:layout_alignBottom="@+id/characterRaceLabel"
        android:layout_marginStart="75dp"/>

    <TextView
        android:text="@string/character_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterGenderLabel"
        android:textSize="18sp"
        android:layout_below="@+id/characterRaceLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterGenderValue"
        android:layout_alignBaseline="@+id/characterGenderLabel"
        android:layout_alignBottom="@+id/characterGenderLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:textSize="18sp"/>

    <TextView
        android:text="@string/character_label_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterLevelLabel"
        android:layout_below="@+id/characterGenderLabel"
        android:layout_alignParentStart="true"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterLevelValue"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/characterLevelLabel"
        android:layout_alignBottom="@+id/characterLevelLabel"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"/>
</RelativeLayout>
