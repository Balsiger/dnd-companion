<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">

  <net.ixitxachitls.companion.ui.views.LabelledEditTextView
      android:id="@+id/edit_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="text"
      app:descriptionText="The name of the character."
      app:labelColor="@color/characterDark"
      app:labelText="Name"
      app:lineColor="@color/characterDark"
      app:textColor="@color/characterText"/>

  <net.ixitxachitls.companion.ui.views.LabelledTextView
      android:id="@+id/edit_gender"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:descriptionText="The gender of the character."
      app:labelColor="@color/characterDark"
      app:labelText="Gender"
      app:lineColor="@color/characterDark"
      app:textColor="@color/characterText"/>

  <net.ixitxachitls.companion.ui.views.LabelledTextView
      android:id="@+id/edit_race"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:descriptionText="The race of the character."
      app:labelColor="@color/characterDark"
      app:labelText="Race"
      app:lineColor="@color/characterDark"
      app:textColor="@color/characterText"/>

  <Button
      android:id="@+id/save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/settings_save"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.446"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/edit_race"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"/>

</LinearLayout>
