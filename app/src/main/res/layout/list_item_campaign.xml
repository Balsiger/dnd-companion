<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list_item_campaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@color/campaign"
                android:descendantFocusability="blocksDescendants"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="net.ixitxachitls.companion.ui.activities.MainActivity">

    <view
        android:id="@+id/network"
        class="net.ixitxachitls.companion.ui.views.NetworkIcon"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:tint="#444"
        app:bleep_bright="@color/onBright"
        app:bleep_dark="@color/on"
        app:srcCompat="@drawable/ic_home_black_48dp"/>

    <view
        android:id="@+id/title"
        class="net.ixitxachitls.companion.ui.views.TitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/network"
        app:color="@color/campaign"/>

</RelativeLayout>