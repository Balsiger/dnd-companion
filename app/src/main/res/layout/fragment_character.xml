<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
      android:id="@+id/back"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/campaign"
      android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/iconSizeSmall"
        android:layout_height="@dimen/iconSizeSmall"
        android:layout_gravity="center_vertical"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

    <TextView
        android:id="@+id/campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="TextView"
        android:theme="@style/SmallText"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/back"
      android:background="@color/character"
      android:orientation="horizontal"
      android:transitionName="sharedMove">

    <view
        android:id="@+id/image"
        class="net.ixitxachitls.companion.ui.views.RoundImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_person_black_48dp"/>

    <view
        android:id="@+id/title"
        class="net.ixitxachitls.companion.ui.views.TitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:color="@color/character"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

      <view
          android:id="@+id/delete"
          class="net.ixitxachitls.companion.ui.views.IconView"
          android:layout_width="@dimen/iconSize"
          android:layout_height="@dimen/iconSize"
          android:background="@android:color/transparent"
          android:contentDescription="@string/campaign_button_delete"
          android:tint="#444"
          android:visibility="visible"
          app:srcCompat="@drawable/ic_delete_black_24dp"/>

      <view
          android:id="@+id/move"
          class="net.ixitxachitls.companion.ui.views.IconView"
          android:layout_width="@dimen/iconSize"
          android:layout_height="@dimen/iconSize"
          android:background="@android:color/transparent"
          android:contentDescription="@string/campaign_button_move"
          android:tint="#444"
          android:visibility="visible"
          app:srcCompat="@drawable/ic_launch_black_24dp"/>
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/abilities"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/bar"
      android:layout_centerInParent="true"
      android:layout_marginTop="10dp"
      android:orientation="horizontal">

    <view
        android:id="@+id/strength"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="STR"/>

    <view
        android:id="@+id/dexterity"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="DEX"/>

    <view
        android:id="@+id/constitution"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="CON"/>

    <view
        android:id="@+id/intelligence"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="INT"/>

    <view
        android:id="@+id/wisdom"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="WIS"/>

    <view
        android:id="@+id/charisma"
        class="net.ixitxachitls.companion.ui.views.AbilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:attribute_name="CHA"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/Xps"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/abilities"
      android:layout_marginStart="13dp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/xp"
        android:padding="10dp"
        android:text="XP"
        android:theme="@style/LargeText"/>

    <EditText
        android:id="@+id/xp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:inputType="numberSigned"
        android:theme="@style/LargeText"/>

    <TextView
        android:id="@+id/xp_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="14dp"
        android:padding="10dp"
        android:theme="@style/SmallText"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/temp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/Xps"
      android:layout_marginStart="13dp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/level"
        android:padding="10dp"
        android:text="Level"
        android:textStyle="italic"
        android:theme="@style/LargeText"/>

    <EditText
        android:id="@+id/level"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:inputType="numberSigned"
        android:theme="@style/LargeText"/>

    s
  </LinearLayout>


</RelativeLayout>
