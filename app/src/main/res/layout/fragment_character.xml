<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/character"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textSize="18sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/characterNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/title_bar"
        android:text="@string/character_name"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/characterNameValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/title_bar"
        android:layout_marginStart="75dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"/>

    <TextView
        android:text="@string/character_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterRaceLabel"
        android:textSize="18sp"
        android:layout_below="@+id/characterNameLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterRaceValue"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/characterRaceLabel"
        android:layout_alignBottom="@+id/characterRaceLabel"
        android:layout_marginStart="75dp"/>

    <TextView
        android:text="@string/character_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterGenderLabel"
        android:textSize="18sp"
        android:layout_below="@+id/characterRaceLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterGenderValue"
        android:layout_alignBaseline="@+id/characterGenderLabel"
        android:layout_alignBottom="@+id/characterGenderLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:textSize="18sp"/>

    <TextView
        android:text="@string/character_label_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterLevelLabel"
        android:layout_below="@+id/characterGenderLabel"
        android:layout_alignParentStart="true"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterLevelValue"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/characterLevelLabel"
        android:layout_alignBottom="@+id/characterLevelLabel"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>
