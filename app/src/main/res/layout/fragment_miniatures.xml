<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:padding="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        app:srcCompat="@drawable/miniatures"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="...name..."
        android:textAlignment="center"
        android:textStyle="bold"
        android:theme="@style/LargeText"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:padding="20dp">

    <net.ixitxachitls.companion.ui.views.LabelledTextView
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelColor="@color/miniatureDark"
        app:labelText="Set"/>

    <net.ixitxachitls.companion.ui.views.LabelledTextView
        android:id="@+id/race"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelColor="@color/miniatureDark"
        app:labelText="Race"/>

    <net.ixitxachitls.companion.ui.views.LabelledTextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelColor="@color/miniatureDark"
        app:labelText="Type"/>

    <net.ixitxachitls.companion.ui.views.LabelledTextView
        android:id="@+id/classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelColor="@color/miniatureDark"
        app:labelText="Classes"/>

    <net.ixitxachitls.companion.ui.views.LabelledTextView
        android:id="@+id/origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelColor="@color/miniatureDark"
        app:labelText="Origin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <net.ixitxachitls.companion.ui.views.LabelledEditTextView
          android:id="@+id/owned"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:inputType="number|numberSigned"
          app:labelColor="@color/miniatureDark"
          app:labelText="Owned"/>

      <net.ixitxachitls.companion.ui.views.LabelledTextView
          android:id="@+id/location"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          app:labelColor="@color/miniatureDark"
          app:labelText="Location"/>

    </LinearLayout>

  </LinearLayout>

  <HorizontalScrollView
      android:id="@+id/actionsContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="0dp"
      android:background="@color/actionBack">

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_weight="0"
          android:contentDescription="Go back"
          android:padding="10dp"
          android:tint="@color/action"
          app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

      <ImageView
          android:id="@+id/filter"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_weight="0"
          android:contentDescription="Filter"
          android:padding="10dp"
          android:tint="@color/action"
          app:srcCompat="@drawable/ic_filter_variant_white_36dp"/>

      <TextView
          android:id="@+id/filtered_number"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="0"
          android:gravity="center_vertical"
          android:text="TextView"
          android:textColor="@color/white"/>

    </LinearLayout>
  </HorizontalScrollView>
</LinearLayout>