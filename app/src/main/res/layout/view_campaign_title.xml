<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/list_item_campaign"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/campaign"
              tools:context="net.ixitxachitls.companion.ui.activities.MainActivity">

  <view
      android:id="@+id/title"
      class="net.ixitxachitls.companion.ui.views.TitleView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:color="@color/campaign"/>

  <LinearLayout
      android:id="@+id/right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/dm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/noun_eye_of_providence_24673"/>

  </LinearLayout>

</LinearLayout>