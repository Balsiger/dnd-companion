<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <view
      android:id="@+id/title"
      class="net.ixitxachitls.companion.ui.views.CampaignTitleView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:transitionName="sharedMove"/>

  <TextView
      android:id="@+id/date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:layout_marginTop="-2dp"
      android:background="@color/campaignLight"
      android:padding="10dp"
      android:theme="@style/SmallText"/>

  <fragment
      android:id="@+id/party"
      android:name="net.ixitxachitls.companion.ui.fragments.PartyFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/actionsContainer"
      android:layout_below="@+id/date"
      android:tag="party"/>

  <fragment
      android:id="@+id/encounter"
      android:name="net.ixitxachitls.companion.ui.fragments.EncounterFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/actionsContainer"
      android:layout_below="@+id/date"
      android:tag="encounter"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/title"
      android:orientation="horizontal">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/campaign"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        android:focusable="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/campaign"
        app:srcCompat="@drawable/ic_today_black_24dp"
        android:focusable="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/campaign"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:focusable="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/campaign"
        app:srcCompat="@drawable/account_plus"
        android:focusable="true"/>

  </LinearLayout>

  <fragment
      android:id="@+id/history"
      android:name="net.ixitxachitls.companion.ui.fragments.HistoryFragment"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_alignParentBottom="true"
      />

  <HorizontalScrollView
      android:id="@+id/actionsContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:background="@color/actionBack"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_weight="0"
          android:contentDescription="Go back"
          android:padding="10dp"
          android:tint="@color/action"
          app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

      <ImageView
          android:id="@+id/encounter_start"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="0"
          android:contentDescription="Start encounter"
          android:padding="10dp"
          android:tint="@color/action"
          app:srcCompat="@drawable/ic_sword_cross_black_24dp"/>

      <LinearLayout
          android:id="@+id/actions_encounter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/encounter_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:contentDescription="End encounter"
            android:padding="10dp"
            android:tint="@color/action"
            app:srcCompat="@drawable/ic_stop_black_24dp"/>

        <ImageView
            android:id="@+id/encounter_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:contentDescription="Next participant"
            android:padding="10dp"
            android:tint="@color/action"
            app:srcCompat="@drawable/arrow_down_bold"/>

        <ImageView
            android:id="@+id/encounter_condition"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:contentDescription="Next participant"
            android:padding="10dp"
            android:tint="@color/action"
            app:srcCompat="@drawable/icons8_treatment_100"/>

        <ImageView
            android:id="@+id/encounter_add_monster"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:contentDescription="Add Monster"
            android:padding="10dp"
            android:tint="@color/action"
            app:srcCompat="@drawable/noun_monster_693507"/>

        <ImageView
            android:id="@+id/encounter_delay"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:contentDescription="Delay"
            android:padding="10dp"
            android:tint="@color/action"
            app:srcCompat="@drawable/ic_hourglass_full_black_24dp"/>

      </LinearLayout>

      <ImageView
          android:id="@+id/xp"
          android:layout_width="50dp"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_weight="0"
          android:contentDescription="XP"
          android:padding="10dp"
          android:tint="@color/action"
          app:srcCompat="@drawable/noun_experience_1705256"/>

    </LinearLayout>

  </HorizontalScrollView>

</RelativeLayout>
