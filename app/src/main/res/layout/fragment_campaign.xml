<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_campaign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
      android:id="@+id/titlebar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:transitionName="sharedMove">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/campaign"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

    <view
        android:id="@+id/title"
        class="net.ixitxachitls.companion.ui.views.CampaignTitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <view
        android:id="@+id/delete"
        class="net.ixitxachitls.companion.ui.views.IconView"
        android:layout_width="@dimen/iconSize"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="0"
        android:background="@color/campaign"
        android:contentDescription="@string/campaign_button_delete"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:tint="#444"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>

  </LinearLayout>

  <TextView
      android:id="@+id/date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/titlebar"
      android:layout_marginTop="-2dp"
      android:background="@color/campaignLight"
      android:padding="10dp"
      android:theme="@style/SmallText"/>

  <fragment
      android:id="@+id/party"
      android:name="net.ixitxachitls.companion.ui.fragments.PartyFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/date"
      android:tag="party"/>

</RelativeLayout>
