<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/actions"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/scroll"
              android:background="@color/battle"
              android:keepScreenOn="true"
              android:orientation="horizontal">

  <ImageButton
      android:id="@+id/add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/battle"
      android:contentDescription="Add Monster"
      android:foregroundTintMode="src_over"
      android:paddingBottom="5dp"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:tint="@color/monster"
      app:srcCompat="@drawable/ic_add_black_24dp"/>

  <View
      android:id="@+id/delimiter_add"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_margin="5dp"
      android:background="#ccc"/>

  <ImageButton
      android:id="@+id/next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/battle"
      android:contentDescription="Next Character or Monster"
      android:paddingBottom="5dp"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:tint="@color/cell"
      app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>

  <View
      android:id="@+id/delimiter_next"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_margin="5dp"
      android:background="#ccc"/>

  <ImageButton
      android:id="@+id/delay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/battle"
      android:contentDescription="Delay"
      android:paddingBottom="5dp"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:tint="@color/cell"
      app:srcCompat="@drawable/ic_access_time_black_24dp"/>

  <View
      android:id="@+id/delimiter_delay"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_margin="5dp"
      android:background="#ccc"/>

  <ImageButton
      android:id="@+id/stop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/battle"
      android:contentDescription="Stop Battle"
      android:paddingBottom="5dp"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:tint="@color/cell"
      app:srcCompat="@drawable/ic_stop_black_24dp"/>

  <View
      android:id="@+id/delimiter_stop"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_margin="5dp"
      android:background="#ccc"/>

  <ImageButton
      android:id="@+id/timed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/battle"
      android:contentDescription="Add Condition"
      android:paddingBottom="5dp"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:tint="@color/cell"
      app:srcCompat="@drawable/ic_hourglass_full_white_24dp"/>

  <View
      android:id="@+id/delimiter_timed"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_margin="5dp"
      android:background="#ccc"/>

</LinearLayout>

