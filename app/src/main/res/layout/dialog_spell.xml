<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="debug"
        android:text="... name ..."
        android:textColor="@color/spell"
        android:textStyle="bold"
        android:theme="@style/LargeText" />

  </LinearLayout>

  <TextView
      android:id="@+id/school"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="... school ..."
      android:theme="@style/LargeText" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... level ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="dm"
        android:text="Components: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/components"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:tag="dm"
        android:text="... components ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="dm"
        android:text="Casting Time: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/casting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:tag="dm"
        android:text="... casting time .."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... range ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/label_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effect: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... effect ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/label_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... duration ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... duration ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saving Throw: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/saving_throw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... saving throw ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spell Resistance:  "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/spell_resistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... spell resistance ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="dm"
        android:text="References: "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/references"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="... references ..."
        android:theme="@style/LargeText" />

  </LinearLayout>

  <TextView
      android:id="@+id/incomplete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:text="... incomplete ..."
      android:textColor="@color/red"
      android:theme="@style/LargeText" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <TextView
          android:id="@+id/description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="...description..."
          android:theme="@style/LargeText" />
    </LinearLayout>
  </ScrollView>

</LinearLayout>