<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      android:id="@+id/campaign"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@color/campaign"
      android:padding="5dp"
      android:text="... campaign ..."
      android:theme="@style/SmallText" />

  <net.ixitxachitls.companion.ui.views.MonsterTitleView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="10dp">

  </net.ixitxachitls.companion.ui.views.MonsterTitleView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Armor Class "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <net.ixitxachitls.companion.ui.views.ModifiedValueView
        android:id="@+id/ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/LargeText"
        tools:text="... ac ..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", touch "
        android:theme="@style/LargeText" />

    <net.ixitxachitls.companion.ui.views.ModifiedValueView
        android:id="@+id/ac_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="... touch ..."
        android:theme="@style/LargeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:text=", flat-footed "
        android:theme="@style/LargeText" />

    <net.ixitxachitls.companion.ui.views.ModifiedValueView
        android:id="@+id/ac_flatfooted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="... flat ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit Points "
        android:textStyle="bold"
        android:theme="@style/LargeText" />

    <TextView
        android:id="@+id/hit_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="... hit points (hit dice) ..."
        android:theme="@style/LargeText" />
  </LinearLayout>

</LinearLayout>