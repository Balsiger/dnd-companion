<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/characterLight"
      android:gravity="center_vertical"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:paddingEnd="10dp"
      android:paddingBottom="5dp"
      android:text="Party"
      android:textColor="#444"
      android:textStyle="bold"
      android:theme="@style/SmallText"/>

  <ScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:elevation="0dp"
      android:minHeight="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <com.google.android.flexbox.FlexboxLayout
          android:id="@+id/party"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/darker_gray"
          android:minWidth="200dp"
          android:orientation="horizontal"
          app:flexWrap="wrap"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dropTarget"
            android:layout_height="@dimen/dropTarget"
            android:layout_gravity="top"
            android:layout_marginEnd="20dp"
            android:alpha=".2"
            android:tint="@color/campaignDark"
            app:srcCompat="@drawable/noun_street_sign_2256165"/>

        <net.ixitxachitls.companion.ui.fragments.AdventureView
            android:id="@+id/adventure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </net.ixitxachitls.companion.ui.fragments.AdventureView>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:layout_alignTop="@+id/title"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="3dp"
      android:orientation="horizontal">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:backgroundTint="@color/character"
        app:srcCompat="@drawable/ic_add_black_24dp"/>
  </LinearLayout>

</RelativeLayout>