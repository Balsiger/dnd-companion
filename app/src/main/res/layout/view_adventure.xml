<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="5dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <net.ixitxachitls.companion.ui.views.CloudImageView
        android:id="@+id/product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:tint="@color/productDark"
        app:srcCompat="@drawable/noun_book_1411063" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/adventure"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="5dp"
          android:text="... adventure ..."
          android:textColor="@color/campaignText"
          android:textStyle="bold"
          android:theme="@style/LargeText" />

      <TextView
          android:id="@+id/encounter"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="10dp"
          android:text="... encounter ..."
          android:textColor="@color/campaignText"
          android:theme="@style/LargeText" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <net.ixitxachitls.companion.ui.views.TooltipImageView
            android:id="@+id/icon_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:tint="@color/campaignDark"
            app:srcCompat="@drawable/ic_map_marker_black_24dp"
            app:tooltip_message="The locations this encounter takes place in."
            app:tooltip_title="Locations" />

        <TextView
            android:id="@+id/locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="... location ..." />
      </LinearLayout>

      <TextView
          android:id="@+id/description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="... description ... " />

    </LinearLayout>
  </LinearLayout>

  <com.google.android.material.tabs.TabLayout
      android:id="@+id/category_tabs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      app:tabIndicatorColor="@color/campaignDark">

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_speak_1953141" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_floor_1141078" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_top_96396" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_wall_2355705" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_antique_2746308" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_mountain_1639193" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_bear_trap_729097" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_candle_139265" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_sound_735224" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_smell_1512570" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_touch_1680154" />

    <com.google.android.material.tabs.TabItem android:icon="@drawable/noun_emotions_2049680" />
  </com.google.android.material.tabs.TabLayout>

  <LinearLayout
      android:id="@+id/category_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="20dp"
      android:orientation="vertical"></LinearLayout>

  <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/creatures"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
  </HorizontalScrollView>

</LinearLayout>